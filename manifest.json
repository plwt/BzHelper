{
  "manifest_version": 2,
  "name": "BzHelper",
  "version": "0.1",
  "description": "Helps users file Firefox bugs directly to Bugzilla",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "icons": {
    "280": "icons/icon.png"
  },
  "browser_action": {
    "default_icon": {
      "280": "icons/icon.png"
    },
    "default_title": "Just file a bug!"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}